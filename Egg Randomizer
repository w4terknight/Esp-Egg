local eggsFolder = workspace:WaitForChild("GardenEggs")
local player = game.Players.LocalPlayer
local gui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
gui.Name = "EggRandomizerUI"

local petEggMap = {
	["Common Egg"] = {"Dog", "Golden Lab", "Bunny"},
	["Uncommon Egg"] = {"Black Bunny", "Chicken", "Cat", "Deer"},
	["Rare Egg"] = {"Orange Tabby", "Spotted Deer", "Pig", "Rooster", "Monkey"},
	["Legendary Egg"] = {"Cow", "Silver Monkey", "Sea Otter", "Turtle", "Polar Bear"},
	["Mythical Egg"] = {"Grey Mouse", "Brown Mouse", "Squirrel", "Red Giant Ant", "Red Fox"},
	["Bug Egg"] = {"Snail", "Giant Ant", "Caterpillar", "Praying Mantis", "Dragonfly"},
	["Common Summer Egg"] = {"Starfish", "Seagull", "Crab"},
	["Rare Summer Egg"] = {"Flamingo", "Toucan", "Sea Turtle", "Orangutan", "Seal"},
	["Paradise Egg"] = {"Ostrich", "Peacock", "Capybara", "Scarlet Macaw", "Mimic Octopus"},
	["Dinosaur Egg"] = {"T-Rex", "Triceratops", "Velociraptor", "Pterodactyl"},
	["Primal Egg"] = {"Spinosaurus", "Ankylosaurus", "Dilophosaurus"},
	["Anti Bee Egg"] = {"Disco Bee", "Butterfly", "Moth", "Tarantula Hawk", "Wasp"},
	["Zen Egg"] = {"Shiba Inu", "Nihonzaru", "Tanuki", "Tanchozuru", "Kappa", "Kitsune"},
	["Bee Egg"] = {"Worker Bee", "Queen Bee", "Drone Bee"},
	["Night Egg"] = {"Night Owl", "Blood Owl", "Midnight Moth", "Mole", "Frog", "Echo Frog", "Raccoon"},
	["Oasis Egg"] = {"Fennec Fox", "Snake", "Hyacinth Macaw", "Camel", "Meerkat", "Axolotl"},
}

for _, egg in ipairs(eggsFolder:GetChildren()) do
	local eggType = egg.Name
	local pets = petEggMap[eggType]
	if pets then
		local hatchBtn = egg:FindFirstChild("HatchButton")
		local billboard = egg:FindFirstChild("BillboardGui")
		local label = billboard and billboard:FindFirstChild("PetLabel")
		if hatchBtn and label then
			hatchBtn.MouseButton1Click:Connect(function()
				if label.Text ~= "?" then return end
				local pet = pets[math.random(1, #pets)]
				label.Text = pet
				hatchBtn.Visible = false
			end)
		end
	end
end

local function createUIButton(name, position, callback)
	local button = Instance.new("TextButton")
	button.Name = name:gsub(" ", "") .. "Button"
	button.Size = UDim2.new(0, 180, 0, 36)
	button.Position = position
	button.BackgroundTransparency = 0.15
	button.BackgroundColor3 = Color3.fromRGB(35, 35, 35)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.GothamSemibold
	button.TextSize = 16
	button.Text = name
	button.AutoButtonColor = true
	button.BorderSizePixel = 0
	button.Parent = gui
	button.MouseButton1Click:Connect(callback)
end

createUIButton("Randomize All Eggs", UDim2.new(0, 20, 0, 100), function()
	for _, egg in ipairs(eggsFolder:GetChildren()) do
		local pets = petEggMap[egg.Name]
		local billboard = egg:FindFirstChild("BillboardGui")
		local label = billboard and billboard:FindFirstChild("PetLabel")
		if pets and label and label.Text == "?" then
			label.Text = pets[math.random(1, #pets)]
		end
	end
end)

createUIButton("Reset All Eggs", UDim2.new(0, 20, 0, 150), function()
	for _, egg in ipairs(eggsFolder:GetChildren()) do
		local billboard = egg:FindFirstChild("BillboardGui")
		local label = billboard and billboard:FindFirstChild("PetLabel")
		local hatchBtn = egg:FindFirstChild("HatchButton")
		if label then label.Text = "?" end
		if hatchBtn then hatchBtn.Visible = true end
	end
end)
